@model IEnumerable<Lab1ICTP.Stadium>

@{
    ViewData["Title"] = "Стадіони у місті";
}

<h1>Стадіони в місті @ViewBag.Name</h1>

<p>
    @Html.ActionLink("Додати новий стадіон", "Create", new { CityId = @ViewBag.CityId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StadiumId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.StadiumId">Деталі</a> |
                @Html.ActionLink("Матчі на стадіоні", "GamesByStadium", "Games", new { stadiumId = item.StadiumId, name = item.Name }) |
                <a asp-action="Delete" asp-route-id="@item.StadiumId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
